platform = espressif32@${meatloaf.esp32_platform_version}
board = esp32-${meatloaf.flash_size}
build_type = debug
build_flags =
	${env.build_flags}
	-D PINMAP_LOLIN_D32_PRO
    -D BOARD_HAS_PSRAM
    -D SD_CARD

